<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update"
    android:padding="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editNH"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Edit"
        android:textColor="@color/blue"
        android:textSize="24sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateS"
        android:src="@drawable/baseline_download_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editNH"
        android:layout_marginEnd="6dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/updateTE"
        android:padding="12dp"
        android:hint="Enter Title"
        android:textSize="20sp"
        android:layout_below="@+id/editNH"
        android:background="@drawable/b_border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
      />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/UpdateCon"
        android:hint="Enter description"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="18sp"
        android:background="@drawable/b_border"
        android:layout_below="@+id/updateTE"
        android:layout_marginTop="12dp"/>



</RelativeLayout>